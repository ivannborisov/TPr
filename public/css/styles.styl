*
  padding 0
  margin 0
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif

body
  font-size 16px
[ng\:cloak],[ng-cloak], .ng-cloak
  display none !important

nav  , #header-wrapper , #main-slider,section
  width 100%
  max-width 1380px
  margin auto

header
  width 100%
  height 50px
  background black

  #header-wrapper
    width 100%
    max-width 1360px
    margin auto

    #logo
      font-size 1.2em
      color white

    a
      text-decoration none
      color: white

nav


  ul
    list-style-type none
    li
      display inline-block
      background #777777
      color white
      padding 10px

    a
      text-decoration none
      color: white
#main-slider
  margin-top -38px

  img
    width 100%
  p
    float right
    width 29.5%
    background black
    color white
    font-weight bolder
    margin 0.2%
    padding 10px 0px 10px 0px
    font-size 1.5em
    text-align center

  #main-slider-main-img
    width 70%
    float left
   
    img
      max-height: 627px
.main-slider-small-img
  width 14%
  margin 0.2%
  float left
  padding 0px

section
  clear both
  background red
