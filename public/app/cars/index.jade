div(style="clear:both;")
   h1 Cars
   div
       h3 Search
       input(type="text", ng-model="search")
       select(ng-model="sort",ng-options="item.value as item.text for item in sortOption")
   div(ng-repeat="project in projects | filter: search | orderBy: sort", style="background:gray;width:400px;margin:2px;")
       img(ng-src="imgs/uploads/{{project.mainImg }}", width="180px", height="80px" )
       a(href="cars/{{project._id}}")  {{ project.title }}